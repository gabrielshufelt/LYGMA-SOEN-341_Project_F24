<div class="container registrations">
  <div class="gradient-filter">
    <div class="title">
      <h1>Create a new account.</h1>
      <p>Already have an account? <%= link_to "Log in.", new_user_session_path %></p>
    </div>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "simple-form" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="fields">
        <div class="half">
          <%= f.label :first_name, "First Name" %>
          <%= f.text_field :first_name, placeholder: "John" %>
        </div>
        <div class="half">
          <%= f.label :last_name, "Last Name" %>
          <%= f.text_field :last_name, placeholder: "Smith" %>
        </div>
      </div>

      <div class="fields">
        <div class="full">
          <%= f.label :role %>
          <%= f.select :role, [["Student", "student"],["Instructor", "instructor"]], prompt: "Please select" %>
        </div>
      </div>

      <div class="fields">
        <div class="full">
          <%= f.label :email %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "johnsmith@example.com" %>
        </div>
      </div>

      <div class="fields">
        <div class="half">
          <%= f.label :password %>
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>
        <div class="half">
          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>
      </div>

      <div class="actions">
        <%= f.submit "Sign up" %>
      </div>
    <% end %>
  </div>
</div>
