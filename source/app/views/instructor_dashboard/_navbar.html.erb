<div class="nav-signedin">
    <div class="nav-signedin-logo">
        <%= image_tag 'real ratings.svg', alt: 'Real Rating Logo', class: 'd-inline-block align-text-top', size: '200x40' %>
    </div>
    <div class="nav-signedin-options">
        <%= link_to instructor_path , class: "nav-signedin-link #{'active' if current_page?(instructor_path)}" do %>
            <%= image_tag 'dashboard_icon.png', alt: 'Dashboard Icon' , size: '16x16' , class:"navbar-signedin-icon" %> Dashboard
        <% end %>

        <%= link_to instructor_teams_path , class: "nav-signedin-link #{'active' if current_page?(instructor_teams_path)}" do %>
            <%= image_tag 'teams_icon.png', alt: 'Dashboard Icon' , size: '16x16' , class:"navbar-signedin-icon" %> Teams
        <% end %>

        <%= link_to instructor_results_path , class: "nav-signedin-link #{'active' if current_page?(instructor_results_path)}" do %>
            <%= image_tag 'results_icon.png', alt: 'Dashboard Icon' , size: '16x16' , class:"navbar-signedin-icon" %> Results
        <% end %>
        
        <%= link_to instructor_settings_path , class: "nav-signedin-link #{'active' if current_page?(instructor_settings_path)}" do %>
            <%= image_tag 'settings_icon.png', alt: 'Dashboard Icon' , size: '16x16' , class:"navbar-signedin-icon" %> Settings
        <% end %>
        
        <%= link_to destroy_user_session_path, method: :delete, data: { turbo_method: :delete } , class: "nav-signedin-link" do %>
            <%= image_tag 'signout_icon.png', alt: 'Sign Out Icon' , size: '16x16' , class:"navbar-signedin-icon" %> Sign Out
        <% end %>
    </div>
</div>